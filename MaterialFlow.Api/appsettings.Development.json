{
  "ConnectionStrings": {
    "Database": "Host=materialflow-db;Port=5432;Database=materialflow;Username=postgres;Password=postgres;",
    "Cache": "materialflow-cache:6379"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": { "Microsoft": "Information" }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://materialflow-seq:5341" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "Authentication": {
    "Authority": "http://materialflow-idp:8080/realms/materialflow",
    "Audience": "materialflow-api",
    "RequireHttpsMetadata": false
  },
  "Keycloak": {
    "BaseUrl": "http://materialflow-idp:8080/",
    "AdminUrl": "http://materialflow-idp:8080/admin/realms/materialflow/",
    "TokenUrl": "http://materialflow-idp:8080/realms/materialflow/protocol/openid-connect/token",
    "AdminClientId": "materialflow-admin-client",
    "AdminClientSecret": "EvDt1VZps3I1iJuDwlHkcgC03gl5wjEx",
    "AuthClientId": "materialflow-auth-client",
    "AuthClientSecret": "OKhSqaFWlZAxBQMM85Zt8CgGwyb03BPU"
  },
  "Outbox": {
    "IntervalInSeconds": 10,
    "BatchSize": 10
  }
}